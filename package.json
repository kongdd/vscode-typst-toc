{
    "name": "typst-title-numering",
    "displayName": "%ext.displayName%",
    "description": "%ext.description%",
    "icon": "images/typst-mark.png",
    "version": "0.1.1",
    "publisher": "kongdd",
    "engines": {
        "vscode": "^1.103.0"
    },
    "categories": [
        "Programming Languages",
        "Formatters",
        "Other"
    ],
    "keywords": [
        "markdown"
    ],
    "bugs": {
        "url": "https://github.com/kongdd/vscode-typst-toc/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kongdd/vscode-typst-toc"
    },
    "license": "MIT",
    "activationEvents": [
        "onLanguage:markdown",
        "onLanguage:rmd",
        "onLanguage:quarto",
        "onLanguage:typst",
        "workspaceContains:README.md"
    ],
    "main": "./dist/node/main.js",
    "contributes": {
        "colors": [
        ],
        "commands": [
            {
                "command": "typst.extension.toc.addSecNumbers",
                "enablement": "editorLangId =~ /^markdown$|^rmd$|^quarto$|^typst$/",
                "title": "%command.toc.addSecNumbers.title%",
                "category": "typst-toc"
            },
            {
                "command": "typst.extension.toc.removeSecNumbers",
                "enablement": "editorLangId =~ /^markdown$|^rmd$|^quarto$|^typst$/",
                "title": "%command.toc.removeSecNumbers.title%",
                "category": "typst-toc"
            },
            {
                "command": "typst.extension.editing.toggleBold",
                "enablement": "editorLangId =~ /^markdown$|^rmd$|^quarto$/",
                "title": "%command.editing.toggleBold%",
                "icon": "$(bold)",
                "category": "typst-toc"
            },
            {
                "command": "typst.extension.editing.toggleItalic",
                "enablement": "editorLangId =~ /^markdown$|^rmd$|^quarto$/",
                "title": "%command.editing.toggleItalic%",
                "icon": "$(italic)",
                "category": "typst-toc"
            },
            {
                "command": "typst.extension.editing.toggleStrikethrough",
                "enablement": "editorLangId =~ /^markdown$|^rmd$|^quarto$/",
                "title": "%command.editing.toggleStrikethrough%",
                "category": "typst-toc"
            }
        ],
        "menus": {
        },
        "keybindings": [
            {
                "command": "typst.extension.editing.toggleBold",
                "key": "ctrl+b",
                "mac": "cmd+b",
                "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
            },
            {
                "command": "typst.extension.editing.toggleItalic",
                "key": "ctrl+i",
                "mac": "cmd+i",
                "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
            },
            {
                "command": "typst.extension.editing.toggleStrikethrough",
                "key": "alt+s",
                "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/ && !isMac"
            },
            {
                "command": "typst.extension.editing.toggleHeadingUp",
                "key": "ctrl+shift+]",
                "mac": "ctrl+shift+]",
                "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
            },
            {
                "command": "typst.extension.editing.toggleHeadingDown",
                "key": "ctrl+shift+[",
                "mac": "ctrl+shift+[",
                "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
            },
            {
                "command": "typst.extension.editing.toggleMath",
                "key": "ctrl+m",
                "mac": "cmd+m",
                "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
            },
            {
                "command": "typst.extension.editing.paste",
                "key": "ctrl+v",
                "mac": "cmd+v",
                "when": "editorTextFocus && editorLangId =~ /^markdown$|^rmd$|^quarto$/ && editorHasSelection"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "%config.title%",
            "properties": {
                "typst.extension.bold.indicator": {
                    "type": "string",
                    "default": "**",
                    "markdownDescription": "%config.bold.indicator.description%",
                    "enum": [
                        "**",
                        "__"
                    ]
                },
                "typst.extension.katex.macros": {
                    "type": "object",
                    "default": {},
                    "description": "%config.katex.macros.description%"
                },
                "typst.extension.math.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%config.math.enabled%"
                },
                
                "typst.extension.toc.levels": {
                    "type": "string",
                    "default": "1..6",
                    "markdownDescription": "%config.toc.levels.description%",
                    "pattern": "^[1-6]\\.\\.[1-6]$"
                },
                "typst.extension.toc.omittedFromToc": {
                    "type": "object",
                    "default": {},
                    "description": "%config.toc.omittedFromToc.description%"
                },
                "typst.extension.toc.orderedList": {
                    "type": "boolean",
                    "default": false,
                    "description": "%config.toc.orderedList.description%"
                },
                "typst.extension.toc.plaintext": {
                    "type": "boolean",
                    "default": false,
                    "description": "%config.toc.plaintext.description%"
                },
                "typst.extension.toc.slugifyMode": {
                    "type": "string",
                    "default": "github",
                    "markdownDescription": "%config.toc.slugifyMode.description%",
                    "enum": [
                        "github",
                        "azureDevops",
                        "bitbucket-cloud",
                        "gitea",
                        "gitlab",
                        "vscode",
                        "zola"
                    ],
                    "enumDescriptions": [
                        "GitHub",
                        "Azure DevOps",
                        "Bitbucket Cloud",
                        "Gitea",
                        "GitLab",
                        "Visual Studio Code",
                        "Zola"
                    ]
                },
                "typst.extension.toc.unorderedList.marker": {
                    "type": "string",
                    "default": "-",
                    "markdownDescription": "%config.toc.unorderedList.marker.description%",
                    "enum": [
                        "-",
                        "*",
                        "+"
                    ]
                },
                "typst.extension.toc.updateOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "%config.toc.updateOnSave.description%"
                },
                "typst.extension.extraLangIds": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "enum": [
                            "rmd",
                            "quarto", 
                            "typst"
                        ]
                    },
                    "description": "%config.extraLangIds.description%"
                }
            }
        },
        "grammars": [
            {
                "scopeName": "markdown.math_display",
                "path": "./build/syntaxes/math_display.markdown.tmLanguage.json",
                "injectTo": [
                    "text.html.markdown"
                ]
            },
            {
                "scopeName": "markdown.math_inline",
                "path": "./build/syntaxes/math_inline.markdown.tmLanguage.json",
                "injectTo": [
                    "text.html.markdown"
                ]
            },
            {
                "scopeName": "text.katex",
                "path": "./build/syntaxes/katex.tmLanguage.json"
            }
        ]
    },
    "capabilities": {
        "virtualWorkspaces": {
            "supported": "limited",
            "description": "In virtual workspaces, some features may not work well."
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "node ./build/build.js",
        "dev-compile": "tsc --build --watch --verbose",
        "pretest": "tsc --build",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
    },
    "devDependencies": {
        "@types/katex": "^0.14.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "~14.18.13",
        "@types/vscode": "^1.103.0",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.6.0",
        "glob": "^11.0.3",
        "mocha": "^11.7.0",
        "ts-loader": "^9.2.8",
        "typescript": "~4.5.5"
    }
}
